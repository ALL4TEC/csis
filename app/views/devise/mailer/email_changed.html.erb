<p><%= t('devise.mailer.email_changed.greeting', recipient: User.find_by(email: @email).full_name) %></p>

<% if @resource.try(:unconfirmed_email?) %>
  <p><%= t('devise.mailer.email_change.message', email: @resource.unconfirmed_email) %></p>
<% else %>
  <p><%= t('devise.mailer.email_changed.message', email: @resource.email) %></p>
<% end %>
<p><%= I18n.t('mailer.content.polite') %></p>
