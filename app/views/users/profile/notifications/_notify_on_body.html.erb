<div class='d-flex align-items-center justify-content-center notification_configuration-col'>
  <%- checked = subject.to_s.in?(current_user.notify_on) %>
  <div class="line-<%= checked ? 'success' : 'secondary' %> line-hover-primary pt-2 pb-2 ps-1 pe-1">
    <div class='form-check form-switch'>
      <input type='checkbox' name='user[notify_on][]' value=<%= subject %> <%= checked ? 'checked' : '' %> class="form-check-input" id='<%= "notif-#{subject}" %>' data-source="check-all-notify" data-target='checker.checkbox'>
      <label class="form-check-label" for='<%= "notif-#{subject}" %>'></label>
    </div>
  </div>
</div>