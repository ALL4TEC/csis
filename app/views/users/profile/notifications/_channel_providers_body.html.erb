<%- channel_providers_accounts.each_with_index do |account_user, index| %>
  <%- provider = account_user.provider %>
  <%- account_user_id = account_user.id %>
  <%- checked = subject.to_s.in?(account_user.notify_on) %>
  <input type='checkbox' name='user[accounts_users_attributes][<%= index %>][id]' value='<%= account_user_id %>' checked class='d-none'>
  <div class='d-flex align-items-center justify-content-center notification_configuration-col'>
    <div class="line-<%= checked ? 'success' : 'secondary' %> line-hover-primary pt-2 pb-2 ps-1 pe-1">
      <div class='form-check form-switch'>
        <input type='checkbox' name='user[accounts_users_attributes][<%= index %>][notify_on][]' value=<%= subject %> <%= checked ? 'checked' : '' %> class="form-check-input" id='<%= "account-user-#{account_user_id}-notify-#{subject}" %>' data-source="check-all-account-user-<%= account_user_id %>-notify" data-target='checker.checkbox'>
        <label class="form-check-label" for='<%= "account-user-#{account_user_id}-notify-#{subject}" %>'></label>
      </div>
    </div>
  </div>
<% end %>