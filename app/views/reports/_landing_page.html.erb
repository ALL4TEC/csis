<% if scan.landing_page.attached? %>
  <button class="btn" type="button" data-bs-toggle="modal" data-bs-target="#url-modal-<%= urlcount %>-ss">
    <span title="<%= t('reports.labels.scan_screenshot') %> <%= scan.url %>" data-bs-toggle='tooltip'>
    <%= image_tag(scan.landing_page.variant(:thumb).processed, alt: scan.web_app_name) %>
    </span>
  </button>

  <div class="modal fade" id="url-modal-<%= urlcount %>-ss" tabindex="-1" role="dialog" aria-labelledby="url-modal-label-<%= urlcount %>-ss" aria-hidden="true">
    <div class="modal-dialog modal-xl" role="document">
      <div class="modal-content">
        <div class="modal-header bg-primary text-white">
          <h5 class="modal-title" id="url-modal-label-<%= urlcount %>-ss"><%= scan.url %></h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Fermer"><span aria-hidden="true">&times;</span></button>
        </div>
        <div class="modal-body text-secondary">
        <!-- Image tag does not download image content but does only set img src... -->
        <!-- https://stackoverflow.com/questions/51032815/activestorage-thumbnail-persistence -->
          <%= image_tag(scan.landing_page, alt: scan.web_app_name, class: 'w-100') %>
        </div>
      </div>
    </div>
  </div>
<% else %>
  <i aria-hidden='true' class="material-icons" alt="no thumbnail"><%= Icons::MAT[:cloud_off] %></i>
<% end %>
