<span class="btn-group bg-dark">
  <button type="button" class="btn btn-dark dropdown-toggle" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
  <%= image_tag("flags/4x3/#{I18n.locale}.svg", class: 'flag') %>
  </button>
  <span class="dropdown-menu dropdown-menu-language m-0 p-0 bg-dark">
  <%- Language.where.not(iso: I18n.locale).map(&:iso).each do |iso| %>
    <%= link_to image_tag("flags/4x3/#{iso}.svg", class: 'flag'), dashboard_locale_path(locale: iso), method: :post, class: 'bg-dark dropdown-item' %>
  <% end %>
  </span>
</span>
