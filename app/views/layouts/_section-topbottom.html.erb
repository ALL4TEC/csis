<div class="bg-dark d-flex" id='bottom-section'>
  <div class="d-flex w-100 align-items-center">
    <div class='d-flex align-items-center justify-content-center' id='bottom-section__btns'>
      <% if ChangelogPolicy.new(current_user, nil).history? %>
        <button class="ms-1 changelog-btn btn btn-secondary rounded" type="button" data-bs-toggle="modal" data-bs-target="#ajax-modal" title="Changelog"><%= CSIS::VERSION %></button>
      <% else %>
        <span class='ms-1 btn btn-secondary rounded' ><%= CSIS::VERSION %></span>
      <% end %>
      <%= render 'layouts/job_progress' %>
    </div>
    <div class='d-flex w-100 justify-content-center'>
      <a class="d-flex align-items-center text-white" href="" target="_blank" rel='noopener'>
        <div class="me-1">&copy; <%= Time.zone.now.year %></div><div>My Company</div>
      </a>
    </div>
  </div>
</div>
