<%= ui_filters @q, url: url_for do |f| %>
  <div class="form-group">
    <%= render 'partials/multiple_select', target: 'qualys_config_id', title: t('activerecord.attributes.qualys_client.qualys_config'), id: "qualys_clients_filters_qualys_config", opts: @q_base.filter_map(&:qualys_config).uniq %>
  </div>

  <div class="form-group">
    <%= f.select :qualys_id_eq, @q_base.filter_map(&:qualys_id).uniq, { include_blank: true }, class: 'form-control selectpicker show-tick', title: t('activerecord.attributes.qualys_client.qualys_id'), data: { 'live-search': "true" } %>
  </div>

  <div class="form-group">
    <%= f.select :qualys_name_eq, @q_base.filter_map(&:qualys_name).uniq, { include_blank: true }, class: 'form-control selectpicker show-tick', title: t('activerecord.attributes.qualys_client.qualys_name'), data: { 'live-search': "true" } %>
  </div>

  <div class="form-group">
    <%= render 'partials/multiple_select', target: 'teams_id', title: t('activerecord.attributes.qualys_client.teams'), id: "qualys_clients_filters_teams", opts: @q_base.flat_map(&:teams).uniq %>
  </div>
<% end %>
