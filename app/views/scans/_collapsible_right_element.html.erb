<div class='card d-flex flex-column align-items-center me-1'>
  <div class='d-flex justify-content-center align-items-center card-header w-100 bg-secondary p-0'>
    <a class='btn btn-sm p-0' role="button" data-bs-toggle='collapse' href='<%= "#scan_#{elements}" %>' aria-expanded="false">
    <div class='m-1'>
      <%= t("scans.labels.#{elements}") %>
      <span class='badge badge-primary'><%= @scan.respond_to?(elements) ? @scan.send(elements).count : 1 %></span>
    </div>
    </a>
  </div>
  <div class='collapse' id='<%= "scan_#{elements}" %>'>
    <div class='card-body d-flex p-2'>
      <%= yield %>
    </div>
  </div>
</div>