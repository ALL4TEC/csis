<%- data = toast_data(toast_type.to_sym) %>
<div role="<%= data[:role] %>" aria-live="<%= data[:live] %>" aria-atomic="true" class="toast show" id='toast' data-bs-animation='true' data-bs-autohide='false' data-bs-delay='5000'>
  <div class="toast-header bg-info text-white d-flex flex-column p-2">
    <div class="w-100 d-flex align-items-center">
      <i aria-hidden='true' class="material-icons me-2"><%= Icons::MAT[data[:icon]] %></i>
      <button type="button" class="ms-auto btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
    </div>
  </div>
  <div class='toast-body bg-info text-white d-flex flex-column p-2'>
    <div class="mt-2">
      <%= sanitize content, attributes: %w[id class style data-method href] %>
    </div>
    <div class="progress w-100">
      <div class="progress-bar" role="progressbar" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100"></div>
    </div>
  </div>
</div>